<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputPrefix">

    <Button
        android:id="@+id/button_kB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kB"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_MB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_kB" />

    <Button
        android:id="@+id/button_GB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_MB" />

    <Button
        android:id="@+id/button_TB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_GB" />
</androidx.constraintlayout.widget.ConstraintLayout>